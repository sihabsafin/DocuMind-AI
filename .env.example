# API Keys
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional fallback
SERPAPI_API_KEY=your_serpapi_key_here  # For web search

# Model Configuration
DEFAULT_MODEL=gemma2-9b-it
PREMIUM_MODEL=llama-3.1-70b-versatile
FAST_MODEL=llama-3.1-8b-instant

# Ollama Configuration (Optional - for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mixtral:8x7b

# Document Processing
MAX_FILE_SIZE_MB=50
MAX_PAGES=1000
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Summarization Settings
DEFAULT_STRATEGY=auto  # auto, stuff, map_reduce, refine
ENABLE_SECTION_DETECTION=true
ENABLE_TABLE_EXTRACTION=true

# Storage
STORAGE_TYPE=local  # local or s3
S3_BUCKET_NAME=documind-storage
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1

# Database
DATABASE_URL=sqlite:///./documind.db
# DATABASE_URL=postgresql://user:password@localhost/documind

# Redis (for caching and async tasks)
REDIS_URL=redis://localhost:6379/0
ENABLE_CACHE=true
CACHE_TTL_HOURS=24

# Rate Limiting
DAILY_DOCUMENT_LIMIT=50
DAILY_SUMMARY_LIMIT=200
MAX_CONCURRENT_JOBS=5

# Feature Flags
ENABLE_MULTI_DOCUMENT=true
ENABLE_SEARCH_AGENT=true
ENABLE_VERSION_COMPARISON=true
ENABLE_EXPORT=true

# Monitoring
SENTRY_DSN=your_sentry_dsn  # Optional
ENABLE_ANALYTICS=false

# UI Configuration
APP_TITLE=DocuMind AI
APP_SUBTITLE=Enterprise-grade AI Summarization Platform
THEME=dark  # dark or light
